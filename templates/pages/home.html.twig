{% extends 'base.html.twig' %}
{% block body %}
{% include 'pages/_header.html.twig' %}
<div class="main-wrapper">
  <main role="main">
    <!-- START HOME SECTION -->
    <section id="home">
      <div class="overlay-section">
        <div class="container">
          <div class="row">
            <div class="col s12">
              <div class="home-inner">
                <h1 class="home-title">med <span>Agence Immobilière</span></h1>
                <p>Vente / Location / Syndic</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Start Blog -->
    <section id="blog">
      <div class="container">
        <div class="row">
          <div class="col s12">
            <div class="blog-inner">
              <h2 class="title">Les derniers biens</h2>
              <p>The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as
                opposed
                to using 'Content here, content here.It is a long established fact that a reader will be
                distracted by
                .</p>

              <!-- Start Blog area -->
              <div class="blog-area">
                <div class="row">
                  {% for property in properties %}
                  <!-- Start single blog post -->
                  <div class="col s12 m4 l3">
                    <div class="blog-post">
                      <div class="card">
                        <div class="card-image">
                          {% if property.filename %}
                          <img src="{{vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb')}}" alt="">
                          {% else %}
                          <img src="{{'/images/properties/blog-empty.jpg' | imagine_filter('thumb')}}" alt="">
                          {% endif %}
                        </div>
                        <div class="card-content blog-post-content">
                          <h2><a
                              href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                          </h2>
                          <!-- blog-single.html -->
                          <p class="card-text">{{ property.department }} ({{ property.postalCode }})</p>
                          <div class="text-primary" style="color:blue; font-size: 2rem; font-weight: bold;">
                            {{property.getFormattedPrice() }} €
                          </div>
                        </div>
                        <div class="card-action">
                          <a class="post-comment" href="{{path('login')}}"><i
                              class="material-icons">comment</i><span>15</span></a>
                          <a class="readmore-btn"
                            href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">Read
                            More</a>
                          <!-- blog-single.html -->
                        </div>
                      </div>
                    </div>
                  </div>

                  {% endfor %}
                </div>
                <!-- All Post Button -->
                {% if app.user %}
                <a class="waves-effect waves-light btn-large allpost-btn" href="">All
                  Post</a>
                {% else %}
                <a class="waves-effect waves-light btn-large allpost-btn" href="{{path('login')}}">All Post</a>
                {% endif %}
                <!-- blog-archive.html -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
	<!-- Fin Blog -->
    <!-- Start Footer -->
    <footer id="footer" role="contentinfo">
      <!-- Start Footer Top -->
      <div class="footer-top">
        <div class="container">
          <div class="row">
            <div class="col s12">
              <div class="footer-top-inner">
                <h2 class="title">Contact</h2>
                <div class="contact">
                  <div class="row">
                    <div class="col s12 m6 l6">
                      <div class="contact-form">
                        <form>
                          <div class="input-field">
                            <input type="text" class="input-box" name="contactName" id="contact-name">
                            <label class="input-label" for="contact-name">Nom</label>
                          </div>
                          <div class="input-field">
                            <input type="email" class="input-box" name="contactEmail" id="email">
                            <label class="input-label" for="email">Email</label>
                          </div>
                          <div class="input-field">
                            <input type="text" class="input-box" name="contactSubject" id="subject">
                            <label class="input-label" for="subject">Sujet</label>
                          </div>
                          <div class="input-field textarea-input">
                            <textarea class="materialize-textarea" name="contactMessage" id="textarea1"></textarea>
                            <label class="input-label" for="textarea1">Message</label>
                          </div>
                          <button class="left waves-effect btn-flat brand-text submit-btn" type="submit">Envoyer
                            message</button>
                        </form>
                      </div>
                    </div>
                    <div class="col s12 m6 l6">
                      <div class="contact-map">

                        <iframe
                          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2622.317397927711!2d2.4492104154640546!3d48.90934480507194!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66cc8b36daa8b%3A0x435833c0e5dfc707!2s19+Rue+Ren%C3%A9+Camier%2C+93000+Bobigny%2C+France!5e0!3m2!1sfr!2sbd!4v1553425395556"
                          width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Start Footer Bottom -->
      <div class="footer-bottom">
        <div class="container">
          <div class="row">
            <div class="col s12">
              <div class="footer-inner">
                <!-- Bottom to Up Btn -->
                <button class="btn-floating btn-large up-btn"><i class="mdi-navigation-expand-less"></i></button>
                <p class="design-info">Poroduit par <a href="">Med Yessad</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </main>
</div>
{% endblock %}