{% extends 'base.html.twig' %}
{% block stylesheets %} {% endblock %}
{% block title%}Voir tous nos biens{% endblock %}
{% block body %}
{% include 'property/_header.html.twig' %}
<section id="blog">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="blog-inner">
                    <h2 class="title">Les biens sur {{city.name}}</h2>
                    <p>The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as
                        opposed
                        to using 'Content here, content here.It is a long established fact that a reader will be
                        distracted by
                        .</p>
                    <!-- Start Blog area -->
                    <div class="blog-area">
                        <div class="row">
                            {% for property in properties %}
                            <!-- Start single blog post -->
                            <div class="col s12 m4 l4">
                                {% include 'property/_property.html.twig' %}
                            </div>
                            {% endfor %}
                        </div>
                        <!-- All Post Button -->
                        {% if app.user %}
                        <a class="waves-effect waves-light btn-large allpost-btn" href="">All
                            Post</a>
                        {% else %}
                        <a class="waves-effect waves-light btn-large allpost-btn" href="{{path('login')}}">All Post</a>
                        {% endif %}
                        <!-- blog-archive.html -->
                        <div class="row">
                            <div class="col s12 m12 l12">
                                {{ knp_pagination_render(properties) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block javascript %}
{% endblock %}