<mjml>
    <mj-body>
        <mj-section>
            <mj-column>

                <mj-image width="100px" src="/assets/img/logo-small.png"></mj-image>

                <mj-divider border-color="#F45E43"></mj-divider>

                <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Hello World</mj-text>
                <mj-table>
                    <tbody>
                        <tr>
                            <td>Nom du bien</td>
                            <td><a href="{{ url('property.show', {id: contact.property.id, slug: contact.property.slug}) }}"
                                    class="">{{ contact.property.title }}</a></td>
                        </tr>
                        <tr>
                            <td>Prénon</td>
                            <td>{{ contact.lastname }}</td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>{{ contact.firstname }}</td>
                        </tr>
                        <tr>
                            <td>Numéro tel</td>
                            <td>{{ contact.phone }}</td>
                        </tr>
                        <tr>
                            <td>message</td>
                            <td>{{ contact.message | nl2br }}</td>
                        </tr>
                    </tbody>
                </mj-table>

            </mj-column>
        </mj-section>
    </mj-body>
</mjml>